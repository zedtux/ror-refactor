{
  "name": "ror-refactor",
  "main": "./lib/ror-refactor",
  "version": "0.3.0",
  "description": "A set of refactoring tools for Ruby On Rails",
  "keywords": [
    "refactor",
    "ruby",
    "rails"
  ],
  "activationCommands": {
    "atom-text-editor": [
      "ror-refactor:extract-code"
    ]
  },
  "repository": "https://github.com/zedtux/ror-refactor",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
  },
  "configSchema": {
    "serviceType": {
      "title": "Service extract template",
      "description": "Select the template to be used when you refactor some methodes as a new service.",
      "type": "string",
      "default": "poro",
      "enum": [
        { "value": "poro", "description": "PORO (Plain Old Ruby Object)" },
        { "value": "interactor", "description": "Interactor gem" }
      ]
    }
  }
}
